        }
        
        .empty-state i {
            font-size: 3rem;
            margin-bottom: 15px;
            color: #ddd;
        }
        
        .empty-state p {
            font-size: 1.1rem;
        }
        
        .view-switcher {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
            gap: 10px;
        }
        
        .view-btn {
            padding: 12px 25px;
            background-color: white;
            border: 2px solid var(--primary);
            color: var(--primary);
            border-radius: 30px;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
        }
        
        .view-btn.active, .view-btn:hover {
            background-color: var(--primary);
            color: white;
        }
        
        .stats {
            display: flex;
            justify-content: space-around;
            background-color: white;
            border-radius: var(--border-radius);
